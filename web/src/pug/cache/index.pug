extends /base.pug
block prehead
  base(href="/")
  style(type="text/css"): :stylus
    h2:before
      display: block
      position: static
      content: "( global style )"
      font-size: 12px
      font-weight: 200
block body
  template
    .border.p-4.m-2.rounded(block="@plotdb/sample1@main:index.html")
      h2 inline template
      p this is generated from a block inlined in HTML inside a template tag.
    .border.p-4.m-2.rounded(block="@plotdb/sample2@main:index.html")
      h2 inline template ( alt )
      p this is generated from yet another block inlined in HTML inside a template tag.
    style(type="@plotdb/block").
      [scope=_QHBsb3RkYi9zYW1wbGUxQG1haW46aW5kZXguaHRtbA__] h2 { color: #942 }
      [scope=_QHBsb3RkYi9zYW1wbGUyQG1haW46aW5kZXguaHRtbA__] h2 { color: #38c }
    script(type="text/javascript"): :lsc
      document.currentScript.import ->
        "@plotdb/sample1@main/index.html": {init: (->console.log("@plotdb/sample1@main loaded")), interface: -> {name: 1}}
        "@plotdb/sample2@main/index.html": {init: (->console.log("@plotdb/sample1@main loaded")), interface: -> {name: 2}}


  .w-1024.rwd.mx-auto.my-4
    .mb-4.d-flex(style="gap:1em")
      .btn.btn-outline-secondary(ld="download") Bundle
      .btn.btn-outline-secondary.btn-upload Debundle #[input(ld="upload",type="file")]
    .d-flex(style="gap:1em")
      #left.rounded.shadow-sm.border.p-4.flex-grow-1(style="width:50%")
      #right.rounded.shadow-sm.border.p-4.flex-grow-1(style="width:50%")
block script
  +script("/assets/lib/ldfile/main/index.min.js")
  +script("/assets/lib/@plotdb/semver/main/index.min.js")
  script(type="module"): include:lsc index.ls
