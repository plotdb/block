#!/usr/bin/env bash

echo "prepare..."
rm -rf dist
mkdir -p dist

echo "building index.ls -> index.js ..."
./node_modules/.bin/lsc -cp --no-header src/index.ls > dist/index.js
echo "building bundle.ls -> bundle.js ..."
./node_modules/.bin/lsc -cp --no-header src/bundle.ls > dist/bundle.js
echo "minify index.js -> index.min.js ..."
./node_modules/.bin/uglifyjs dist/index.js -m -c > dist/index.min.js
echo "minify bundle.js -> bundle.min.js ..."
./node_modules/.bin/uglifyjs dist/bundle.js -m -c > dist/bundle.min.js

echo "copy dist to web ..."
rm -rf web/static/assets/lib/@plotdb/block/dev/
mkdir -p web/static/assets/lib/@plotdb/block/dev/
cp -R dist/* web/static/assets/lib/@plotdb/block/dev/

